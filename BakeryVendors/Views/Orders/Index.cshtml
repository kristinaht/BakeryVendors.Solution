@using BakeryVendors.Models;

<h1>Vendor orders</h1>

@if(@Model.Count == 0)
{
  <p>There are no orders for this vendor at this time.</p>
}

@foreach(Order order in Model)
{
  <li><a href='/orders/@order.Id/'>@order.Title</a></li>
  <li><a href='/orders/@order.Id/'>@order.Description</a></li>
  <li><a href='/orders@order.Id'>@order.Price</a></li>
  <li><a href='/orders@order.Id'>@order.Date</a></li>
}

<p><a href='orders/new'>Add a new order</a></p>